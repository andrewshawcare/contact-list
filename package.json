{
  "name": "contact-list",
  "version": "0.0.1",
  "description": "Manage a list of your personal contacts.",
  "main": "src/index.js",
  "scripts": {
    "develop": "nodemon --watch src --exec 'npm run lint && npm test && npm start'",
    "lint": "semistandard | snazzy",
    "prestart": "webpack src/presenter.js dist/presenter.js && cp src/index.html dist",
    "start": "static --host-address 0.0.0.0 --port $PORT dist",
    "test": "node test.js ./src/**/test.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:andrewshawcare/contact-list.git"
  },
  "license": "ISC",
  "devDependencies": {
    "glob": "^7.1.1",
    "jasmine": "^2.5.3",
    "jsdom": "^9.11.0",
    "nodemon": "^1.11.0",
    "semistandard": "^9.2.1",
    "snazzy": "^6.0.0"
  },
  "dependencies": {
    "node-static": "^0.7.9",
    "webpack": "^2.2.1"
  }
}
